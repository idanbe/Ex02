<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="#2f8eff"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start"
        android:background="#2f8eff"
        android:id="@+id/button_start"
        android:layout_marginRight="52dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="29dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sttings"
        android:background="#2f8eff"
        android:id="@+id/button_sttings"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/button_start"
        android:layout_alignStart="@+id/button_start" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="100dp"
        android:id="@+id/button_red"
        android:layout_alignBottom="@+id/button_start"
        android:layout_toLeftOf="@+id/button_start"
        android:layout_toStartOf="@+id/button_start"
        android:layout_marginRight="130dp"
        android:background="#FF0000"
        android:layout_marginEnd="130dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="best result"
        android:id="@+id/textView_best"
        android:layout_marginTop="27dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/button_sttings"
        android:layout_toStartOf="@+id/button_sttings" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_time1"
        android:text="ss:mmm"
        android:layout_alignBottom="@+id/textView_best"
        android:layout_alignRight="@+id/button_sttings"
        android:layout_alignEnd="@+id/button_sttings" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent result"
        android:id="@+id/textView_resnt"
        android:layout_above="@+id/button_sttings"
        android:layout_alignLeft="@+id/textView_best"
        android:layout_alignStart="@+id/textView_best"
        android:layout_marginBottom="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ss:mmm"
        android:id="@+id/text_time2"
        android:layout_alignBottom="@+id/textView_resnt"
        android:layout_alignLeft="@+id/text_time1"
        android:layout_alignStart="@+id/text_time1" />

</RelativeLayout>
