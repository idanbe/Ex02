<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="#2f8eff"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2f8eff"
        android:id="@+id/button_start"
        android:text="@string/button_start"
        android:layout_above="@+id/button_red"
        android:layout_marginBottom="10dp"
        android:layout_alignRight="@+id/textView_resnt"
        android:layout_alignEnd="@+id/textView_resnt"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_sttings"
        android:background="#2f8eff"
        android:id="@+id/button_sttings"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/text_time2"
        android:layout_toRightOf="@+id/textView_resnt"
        android:layout_toEndOf="@+id/textView_resnt"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="61dp" />

    <Button
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="100dp"
        android:id="@+id/button_red"
        android:background="#FF0000"
        android:layout_marginTop="86dp"
        android:layout_below="@+id/button_sttings"
        android:layout_alignRight="@+id/button_sttings"
        android:layout_alignEnd="@+id/button_sttings" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_best"
        android:text="@string/textView_best"
        android:layout_marginTop="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView_resnt"
        android:layout_alignStart="@+id/textView_resnt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_time1"
        android:hint="@string/text_time1"
        android:layout_alignBottom="@+id/textView_best"
        android:layout_alignRight="@+id/button_sttings"
        android:layout_alignEnd="@+id/button_sttings" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="@string/textView_resnt"
        android:id="@+id/textView_resnt"
        android:layout_alignTop="@+id/text_time2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_time2"
        android:hint="@string/text_time2"
        android:layout_below="@+id/text_time1"
        android:layout_alignLeft="@+id/text_time1"
        android:layout_alignStart="@+id/text_time1"
        android:layout_marginTop="27dp" />

    <com.example.administrator.ex02.MyView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>
